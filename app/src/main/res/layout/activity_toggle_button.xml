<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToggleButtonActivity">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButtonGroupIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/toggleButtonGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <Button
            android:id="@+id/btnWifiOn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            style="@style/ToggleButtonWithOnlyIcon"
            app:icon="@drawable/ic_baseline_wifi_24"
            />

        <Button
            android:id="@+id/btnWifiOff"
            android:layout_width="48dp"
            android:layout_height="48dp"
            style="@style/ToggleButtonWithOnlyIcon"
            app:icon="@drawable/ic_baseline_wifi_off_24"
            />

        <Button
            android:id="@+id/btnWifiLocked"
            android:layout_width="48dp"
            android:layout_height="48dp"
            style="@style/ToggleButtonWithOnlyIcon"
            app:icon="@drawable/ic_baseline_signal_wifi_4_bar_lock_24"
            />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButtonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <Button
            android:id="@+id/btnAndroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />

        <Button
            android:id="@+id/btnFlutter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flutter"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />

        <Button
            android:id="@+id/btnWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />

    </com.google.android.material.button.MaterialButtonToggleGroup>


</androidx.constraintlayout.widget.ConstraintLayout>